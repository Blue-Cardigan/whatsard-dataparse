{
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"]
    },
    "importMap": "import_map.json",
    "lint": {
      "files": {
        "include": ["src/"]
      },
      "rules": {
        "tags": ["recommended"]
      }
    },
    "test": {
      "include": ["src/functions/lib/__tests__/"]
    },
    "tasks": {
      "test": "deno test"
    },
    "fmt": {
      "files": {
        "include": ["src/"]
      },
      "options": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 2,
        "singleQuote": true,
        "proseWrap": "always"
      }
    }
  }